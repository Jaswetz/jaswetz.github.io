{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "## Folders",
  "scripts": {
    "dev": "parcel src/*.html --open",
    "build": "parcel build src/*.html --dist-dir dist --public-url / && cp -r src/assets dist/",
    "clean": "rm -rf dist .parcel-cache",
    "lint": "eslint src/js/**/*.js",
    "stylelint": "stylelint 'src/css/**/*.css'",
    "test:accessibility": "axe http://localhost:1234 --exit",
    "test:performance": "lighthouse http://localhost:1234 --output json --output-path ./lighthouse-report.json --chrome-flags='--headless'",
    "test": "npm run lint && npm run stylelint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/js": "^9.30.0",
    "@parcel/config-default": "^2.15.2",
    "@parcel/optimizer-cssnano": "^2.15.2",
    "@parcel/optimizer-terser": "^2.15.2",
    "@parcel/packager-css": "^2.15.2",
    "@parcel/packager-html": "^2.15.2",
    "@parcel/packager-js": "^2.15.2",
    "@parcel/transformer-css": "^2.15.2",
    "@parcel/transformer-html": "^2.15.2",
    "@parcel/transformer-js": "^2.15.2",
    "eslint": "^9.30.0",
    "lighthouse": "^12.7.0",
    "parcel": "^2.15.2",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "browserslist": [
    "Chrome >= 63",
    "Firefox >= 63",
    "Safari >= 10.1",
    "Edge >= 79"
  ]
}
