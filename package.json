{
  "name": "jaswetz-portfolio",
  "version": "1.0.0",
  "description": "Jason Swetzoff's UX Design Portfolio",
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/index.html --public-url ./",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "stylelint": "stylelint 'src/css/**/*.css'",
    "stylelint:fix": "stylelint 'src/css/**/*.css' --fix",
    "css:size-check": "node scripts/check-css-bundle-size.js",
    "css:size-update": "node scripts/check-css-bundle-size.js --update-baseline",
    "test:css-regression": "playwright test tests/css-regression.spec.js",
    "lint-staged": "lint-staged",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@parcel/optimizer-cssnano": "^2.16.0",
    "@parcel/packager-raw-url": "^2.16.0",
    "@parcel/transformer-jsonld": "^2.16.0",
    "@parcel/transformer-sass": "^2.10.0",
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "parcel": "^2.10.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^9.3.2",
    "postcss-purgecss": "^5.0.0",
    "prettier": "^3.2.5",
    "purgecss": "^7.0.2",
    "stylelint": "^16.3.2",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.12.1",
    "vitest": "^1.5.0"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "not dead"
  ]
}
