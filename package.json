{
  "name": "jaswetz-portfolio",
  "version": "1.0.0",
  "type": "module",
  "description": "Jason Swetzoff's UX Design Portfolio",
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/*.html src/projects/*.html --dist-dir dist --public-url /",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:css": "node scripts/inline-critical-css.js",
    "optimize:update-images": "node scripts/update-image-references.js",
    "test:security": "npm audit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "stylelint": "stylelint 'src/css/**/*.css' --cache false --allow-empty-input",
    "stylelint:fix": "stylelint 'src/css/**/*.css' --fix --cache false --allow-empty-input",
    "serve": "parcel serve src/index.html --port 8080",
    "test:bundle-size": "bundlesize",
    "test:accessibility:local": "npx axe http://localhost:8080 --exit",
    "test:performance:local": "npx lighthouse http://localhost:8080 --output json --output-path ./lighthouse-report.json --chrome-flags='--headless --no-sandbox'",
    "css:size-check": "node scripts/check-css-bundle-size.js",
    "test:links:local": "npx linkinator http://localhost:8080 --recurse --skip 'mailto:'",
    "css:size-update": "node scripts/check-css-bundle-size.js --update-baseline",
    "test:css-regression": "playwright test tests/e2e/css-regression.spec.js",
    "lint-staged": "lint-staged",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "node scripts/performance-monitor.js",
    "test:performance:ci": "node scripts/performance-monitor.js --ci --export",
    "test:bundle-regression": "node scripts/bundle-size-monitor.js",
    "test:bundle-regression:ci": "node scripts/bundle-size-monitor.js --ci --export",
    "monitor:performance": "npm run build && npm run serve & sleep 5 && npm run test:performance && kill $!",
    "monitor:performance:full": "npm run build && npm run serve & sleep 15 && npm run test:performance:ci && npm run test:bundle-regression:ci && kill $!",
    "performance:baseline": "npm run build && npm run serve & sleep 5 && node scripts/performance-monitor.js --export && kill $!",
    "ci:performance-gate": "npm run build && npm run test:bundle-regression:ci && npm run serve & sleep 10 && npm run test:performance:ci && kill $!",
    "dashboard:generate": "node scripts/performance-dashboard.js",
    "dashboard:open": "npm run dashboard:generate && open performance-dashboard.html",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.html": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@parcel/optimizer-cssnano": "^2.16.0",
    "@parcel/packager-raw-url": "^2.16.0",
    "@parcel/transformer-jsonld": "^2.16.0",
    "@parcel/transformer-sass": "^2.10.0",
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.19",
    "axe-cli": "^3.2.1",
    "bundlesize": "^0.18.2",
    "critical": "^7.2.1",
    "cssnano": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.0.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "parcel": "^2.10.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^9.3.2",
    "postcss-purgecss": "^5.0.0",
    "prettier": "^3.2.5",
    "purgecss": "^7.0.2",
    "sharp": "^0.34.4",
    "stylelint": "^16.3.2",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "vitest": "^3.2.4",
    "web-vitals": "^3.5.0"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "not dead"
  ],
  "bundlesize": [
    {
      "path": "dist/jaswetz.github.io.*.css",
      "maxSize": "75 kB"
    },
    {
      "path": "dist/jaswetz.github.io.*.js",
      "maxSize": "30 kB"
    }
  ]
}
