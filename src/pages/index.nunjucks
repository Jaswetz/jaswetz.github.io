<!-- index.nunjucks -->
{% extends "layout.nunjucks" %}

{% block title %}Jason Swetzoff - UX Design and Strategy Portfolio{% endblock %}
{% block description %}Explore Jason Swetzoff's UX design portfolio showcasing innovative projects in web and mobile application design, user research, and strategy.{% endblock %}

{% block content %}
<div class="home home--active">
    {% include "partials/header.nunjucks" %}
</div>

<div class="intro__wrapper">
    <div class="intro" role="banner" aria-label="Introduction"></div>
    <div class="intro__tagline font-weight--bold">
        <div class="container">
            <div class="intro__tagline--large uppercase">UX Design</div>
            <span class="font-weight--thin">and</span>
            <span class="uppercase">Strategy</span>
        </div>
    </div>
</div>

<main role="main" id="main-content">
    <div class="container">
        <section class="work" aria-labelledby="work-header">
            <h2 id="work-header" class="section-header">Featured Projects</h2>
            <div class="g g--full g--1of2--medium g--1of3--large">
                <div class="g__cell">
                    <a href="autodesk.html" class="project__link">
                        <article class="project">
                            <img src="images/proj-thumb-autodesk.jpg" alt="Coming Soon" class="project__image">
                            <div class="project__content">
                                <h3 class="project__title">Autodesk Case Studies: Coming Soon</h3>
