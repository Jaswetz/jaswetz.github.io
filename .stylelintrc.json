{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": [
    "dist/**/*",
    "dev-build/**/*",
    ".parcel-cache/**/*",
    "node_modules/**/*"
  ],
  "rules": {
    "custom-property-pattern": null,
    "selector-class-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer"]
      }
    ]
  }
}
